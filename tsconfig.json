{
  "exclude": ["**/*.test.ts"],
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  }
}
